<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="soccerSimulator" type="FantasySimulator.Simulators.Soccer.Config.SoccerSimulatorConfigurationSectionHandler, FantasySimulator.DebugConsole" />
  </configSections>

  <appSettings>
    <add key="TransfersPageJsonFilename" value="TransfersPage_201512151815.json" />
    <add key="log4net.Config" value="log4net.config"/>
    <add key="log4net.Config.Watch" value="True"/>
  </appSettings>

  <soccerSimulator>
    <settings>
      <property name="SimulateFinishedGames" value="false" />
    </settings>

    <playerAnalysers>
      <!-- PlayerUnavailablePlayerAnalyser -->
      <analyser enabled="true" type="FantasySimulator.Simulator.Soccer.Analysers.PlayerUnavailablePlayerAnalyser, FantasySimulator.Simulator.Soccer">
        <property name="Points" value="-10" />
      </analyser>

      <!-- HomeTeamAdvantagePlayerAnalyser -->
      <analyser enabled="false" type="FantasySimulator.Simulator.Soccer.Analysers.HomeTeamAdvantagePlayerAnalyser, FantasySimulator.Simulator.Soccer">
        <property name="Points" value="5" />
      </analyser>

      <!-- ChanceOfPlayingNextFixturePlayerAnalyser -->
      <analyser enabled="false" type="FantasySimulator.Simulator.Soccer.Analysers.ChanceOfPlayingNextFixturePlayerAnalyser, FantasySimulator.Simulator.Soccer">
        <property name="PointRange" type="FantasySimulator.Simulator.Soccer.Structs.PointRange, FantasySimulator.Simulator.Soccer">
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="0" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="-10" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="0.25" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="-3" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="0.50" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="-2" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="0.75" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="-1" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="1" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="+2" />
          </mapping>
        </property>
      </analyser>

      <!-- PlaytimePlayerAnalyser -->
      <analyser enabled="false" type="FantasySimulator.Simulator.Soccer.Analysers.PlaytimePlayerAnalyser, FantasySimulator.Simulator.Soccer">
        <property name="PointRange" type="FantasySimulator.Simulator.Soccer.Structs.PointRange, FantasySimulator.Simulator.Soccer">
          <!--<mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="1" />
              <unit value="playedgames" />
            </predicate>
            <property name="Points" value="0" />
          </mapping>-->
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="15" />
              <unit value="minutes" />
            </predicate>
            <property name="Points" value="-1" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="80 / 90" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="2" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="70 / 90" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="2" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="60 / 90" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="1" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="15 / 90" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="-1" />
          </mapping>
        </property>
      </analyser>

      <!-- TeamFormPlayerAnalyser -->
      <analyser enabled="false" type="FantasySimulator.Simulator.Soccer.Analysers.TeamFormPlayerAnalyser, FantasySimulator.Simulator.Soccer">
        <property name="MinGamesPlayed" value="6" />
        <property name="NumberOfRecentGames" value="6" />
        
        <property name="PointRange" type="FantasySimulator.Simulator.Soccer.Structs.PointRange, FantasySimulator.Simulator.Soccer">
          <mapping>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="12" />
              <unit value="points-per-game" />
            </predicate>
            <property name="Points" value="4" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="10" />
              <unit value="points-per-game" />
            </predicate>
            <property name="Points" value="2" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="4" />
              <unit value="points-per-game" />
            </predicate>
            <property name="Points" value="-4" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="6" />
              <unit value="points-per-game" />
            </predicate>
            <property name="Points" value="-1" />
          </mapping>
        </property>
      </analyser>

      <!-- FixtureOddsPlayerAnalyser -->
      <analyser enabled="true" type="FantasySimulator.Simulator.Soccer.Analysers.FixtureOddsPlayerAnalyser, FantasySimulator.Simulator.Soccer">
        <property name="PointRange" type="FantasySimulator.Simulator.Soccer.Structs.PointRange, FantasySimulator.Simulator.Soccer">
          <property name="MappingMode" value="AllMatching" />
          
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="1.35" />
              <unit value="odds-win" />
            </predicate>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="11.0" />
              <unit value="odds-loss" />
            </predicate>
            <property name="PredicateMode" value="All" />
            <property name="Points" value="2" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="1.5" />
              <unit value="odds-win" />
            </predicate>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="4.0" />
              <unit value="odds-loss" />
            </predicate>
            <property name="PredicateMode" value="All" />
            <property name="Points" value="1" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="1.8" />
              <unit value="odds-win" />
            </predicate>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="2.2" />
              <unit value="odds-loss" />
            </predicate>
            <property name="PredicateMode" value="All" />
            <property name="Points" value="1" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="2.0" />
              <unit value="odds-win" />
            </predicate>
            <predicate>
              <operator value="LessThan" />
              <value value="2.0" />
              <unit value="odds-loss" />
            </predicate>
            <property name="PredicateMode" value="All" />
            <property name="Points" value="-1" />
          </mapping>
        </property>
      </analyser>
    </playerAnalysers>

  </soccerSimulator>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6"/>
  </startup>
</configuration>
