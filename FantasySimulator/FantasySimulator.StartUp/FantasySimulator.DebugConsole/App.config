<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="soccerSimulator" type="FantasySimulator.Simulators.Soccer.Config.SoccerSimulatorConfigurationSectionHandler, FantasySimulator.DebugConsole" />
  </configSections>

  <appSettings>
    <add key="TransfersPageJsonFilename" value="TransfersPage_201512151815.json" />
    <add key="log4net.Config" value="log4net.config"/>
    <add key="log4net.Config.Watch" value="True"/>
  </appSettings>
  
  <soccerSimulator>
    <settings>
      <property name="SimulateFinishedGames" value="false" />
    </settings>
    
    <playerAnalysers>
      <analyser enabled="true" type="FantasySimulator.Simulator.Soccer.Analysers.PlayerUnavailablePlayerAnalyser, FantasySimulator.Simulator.Soccer">
        <property name="Points" value="-10" />
      </analyser>
        
      <analyser enabled="false" type="FantasySimulator.Simulator.Soccer.Analysers.HomeTeamAdvantagePlayerAnalyser, FantasySimulator.Simulator.Soccer">
        <property name="Points" value="5" />
      </analyser>
      
      <analyser enabled="false" type="FantasySimulator.Simulator.Soccer.Analysers.ChanceOfPlayingNextFixturePlayerAnalyser, FantasySimulator.Simulator.Soccer">
        <property name="PointsRange" type="FantasySimulator.Simulator.Soccer.Structs.PointsRange, FantasySimulator.Simulator.Soccer">
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="0" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="-10" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="0.25" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="-3" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="0.50" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="-2" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="0.75" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="-1" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="1" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="+2" />
          </mapping>
        </property>
      </analyser>
      
      <analyser enabled="true" type="FantasySimulator.Simulator.Soccer.Analysers.PlaytimePlayerAnalyser, FantasySimulator.Simulator.Soccer">
        <property name="PointsRange" type="FantasySimulator.Simulator.Soccer.Structs.PointsRange, FantasySimulator.Simulator.Soccer">
          <!--<mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="1" />
              <unit value="playedgames" />
            </predicate>
            <property name="Points" value="0" />
          </mapping>-->
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="15" />
              <unit value="minutes" />
            </predicate>
            <property name="Points" value="-1" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="80 / 90" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="2" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="70 / 90" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="2" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="GreaterOrEqualThan" />
              <value value="60 / 90" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="1" />
          </mapping>
          <mapping>
            <predicate>
              <operator value="LessOrEqualThan" />
              <value value="15 / 90" />
              <unit value="percentage" />
            </predicate>
            <property name="Points" value="-1" />
          </mapping>
        </property>
      </analyser>
    </playerAnalysers>
    
    <!--
    // todo: add log4net support
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO" />
      <appender-ref ref="ConsoleAppender" />
    </root>-->
  </soccerSimulator>
  
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6"/>
    </startup>
</configuration>
